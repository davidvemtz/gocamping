<% include ../partials/header %>

  <div class="row text-center">
    <h1 style = "text-align: center"> Add comment to <%= campground.name %> </h1>
    <div style="width: 30%; margin: 30px auto">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block"> Done </button>
        </div>
      </form>
      <a class= "btn btn-xs btn-success" href="/campgrounds"> Go back </a>
    </div>

  </div>


<% include ../partials/footer %>
